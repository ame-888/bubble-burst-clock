<script define:vars={{ lang, t, translations, latestClaimDate, simulatedServerTime, predictions }}>
    function init() {
        // --- Betting Logic ---
        function setupBetting() {
            const controls = document.querySelectorAll('.betting-controls');

            // Initial render state
            updateBettingUI();

            controls.forEach(control => {
                const id = control.getAttribute('data-prediction-id');
                const btnCorrect = control.querySelector('.bet-correct');
                const btnIncorrect = control.querySelector('.bet-incorrect');

                if (btnCorrect) {
                    btnCorrect.addEventListener('click', (e) => {
                        e.preventDefault();
                        e.stopPropagation(); // Prevent card click
                        window.BettingManager.placeBet(id, 'correct');
                    });
                }

                if (btnIncorrect) {
                    btnIncorrect.addEventListener('click', (e) => {
                        e.preventDefault();
                        e.stopPropagation();
                        window.BettingManager.placeBet(id, 'incorrect');
                    });
                }
            });

            // Listen for updates
            window.addEventListener('bets-updated', updateBettingUI);
        }

        function updateBettingUI() {
            if (!window.BettingManager) return;

            document.querySelectorAll('.betting-controls').forEach(control => {
                const id = control.getAttribute('data-prediction-id');
                const userBet = window.BettingManager.getBet(id);
                const btnCorrect = control.querySelector('.bet-correct');
                const btnIncorrect = control.querySelector('.bet-incorrect');

                // Reset classes
                if (btnCorrect) btnCorrect.classList.remove('bet-active-correct');
                if (btnIncorrect) btnIncorrect.classList.remove('bet-active-incorrect');

                if (userBet === 'correct' && btnCorrect) {
                    btnCorrect.classList.add('bet-active-correct');
                } else if (userBet === 'incorrect' && btnIncorrect) {
                    btnIncorrect.classList.add('bet-active-incorrect');
                }
            });
        }

        // --- Modal Logic ---
        const overlay = document.getElementById('modal-overlay');
        const submissionModal = document.getElementById('submission-modal');
        const bugModal = document.getElementById('bug-modal');

        const btnSubmit = document.getElementById('fab-submit');
        const btnBug = document.getElementById('fab-bug');

        const closeButtons = document.querySelectorAll('.close-modal');

        function openModal(modal) {
            if (!modal) return;
            overlay.classList.remove('hidden');
            modal.classList.remove('hidden');
        }

        function closeModal() {
            overlay.classList.add('hidden');
            submissionModal.classList.add('hidden');
            bugModal.classList.add('hidden');
        }

        if (btnSubmit) btnSubmit.addEventListener('click', () => openModal(submissionModal));
        if (btnBug) {
            btnBug.addEventListener('click', () => {
                const title = document.getElementById('report-bug-title');
                const btn = document.getElementById('report-bug-button');
                const inputType = document.querySelector('input[name="type"]');
                if (title) title.textContent = currentTranslations.report_bug_title;
                if (btn) btn.textContent = currentTranslations.report_bug_button;
                if (inputType) inputType.value = "bug_report";
                openModal(bugModal);
                // Achievement: Open Bug Report
                window.dispatchEvent(new CustomEvent('bug-report-opened'));
            });
        }

        window.addEventListener('open-game-suggestion', () => {
            const title = document.getElementById('report-bug-title');
            const btn = document.getElementById('report-bug-button');
            const inputType = document.querySelector('input[name="type"]');

            // Use localized strings if available, fallback to hardcoded (added to en.json)
            const suggestionTitle = currentTranslations.suggest_game_title || "Suggest a Game";
            const suggestionBtn = currentTranslations.suggest_game_button || "Suggest Game";

