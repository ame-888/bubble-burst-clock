<script define:vars={{ lang, t, translations, latestClaimDate, simulatedServerTime }}>
    function init() {
        // --- Easter Egg Logic ---
        let titleClickCount = 0;
        const mainTitle = document.getElementById('main-title');
        const gameCenterWrapper = document.getElementById('game-center-wrapper');

        if (mainTitle && gameCenterWrapper) {
            mainTitle.addEventListener('click', () => {
                titleClickCount++;
                if (titleClickCount === 5) {
                    gameCenterWrapper.classList.remove('hidden');
                    console.log('Game Center Unlocked! ðŸŽ®');
                    mainTitle.style.color = '#F59E0B'; // Turn title gold temporarily
                    setTimeout(() => {
                        mainTitle.style.color = '';
                    }, 500);
                }
            });
        }

        let currentLang = lang;
        let currentTranslations = t;

        // Function to get translations
        function getTranslations(langCode) {
            return translations[langCode] || translations['en'];
        }

        function updateStaticTranslations() {
            if (!mainTitle) return; // Basic check

            document.title = currentTranslations.title;
            mainTitle.textContent = currentTranslations.title;
            const subtitle = document.getElementById('subtitle');
            if (subtitle) subtitle.textContent = currentTranslations.subtitle;

            const submitBtn = document.getElementById('submit-prediction-button');
            if (submitBtn) submitBtn.textContent = currentTranslations.submit_prediction;

            const formHeading = document.getElementById('form-heading');
            if (formHeading) formHeading.textContent = currentTranslations.form_heading;

            const formDescription = document.getElementById('form-description');
            if (formDescription) formDescription.textContent = currentTranslations.form_description;

            const nameInput = document.querySelector('input[name="name"]');
            if (nameInput) nameInput.placeholder = currentTranslations.name_placeholder;

            const emailInput = document.querySelector('input[name="email"]');
            if (emailInput) emailInput.placeholder = currentTranslations.email_placeholder;

            const messageInput = document.querySelector('textarea[name="message"]');
            if (messageInput) messageInput.placeholder = currentTranslations.message_placeholder;

            const clockExplanation = document.getElementById('clock-explanation');
            if (clockExplanation) clockExplanation.textContent = currentTranslations.clock_explanation;

            const statusExplanation = document.getElementById('status-explanation');
            if (statusExplanation) statusExplanation.textContent = currentTranslations.status_explanation;

            // Note: Dynamic content like the prediction cards is rendered server-side in Astro
            // and won't update client-side without full page reload or React/hydration.
            // Since this is a static site mainly, reloading or server-side pref is fine.
            // For now, we only update static elements that have IDs.
            // Future improvement: Use a framework island or re-render logic if needed.
        }

        // --- Clock Logic ---
        function startClock() {
            const clockElement = document.getElementById('big-clock');
            if (!clockElement || !latestClaimDate) return;

            const startDate = new Date(latestClaimDate);

            // Calculate time offset: Simulated Server Time - Client Real Time
            // This forces the client to perceive "now" as the simulated server time (Dec 1, 2025)
            // plus whatever seconds pass while the user is on the page.
            const serverTime = simulatedServerTime;
            const clientTime = new Date().getTime();
            const timeOffset = serverTime - clientTime;

            function updateClock() {
                // Effective Now = Client Current Time + Offset
                const now = new Date(new Date().getTime() + timeOffset);
                const diff = now - startDate;

                if (diff < 0) {
                    clockElement.textContent = "00d 00h 00m 00s";
                    return;
                }

                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                const pad = (n) => n.toString().padStart(2, '0');

                clockElement.textContent = `${pad(days)}d ${pad(hours)}h ${pad(minutes)}m ${pad(seconds)}s`;
            }

            updateClock(); // Initial call
            setInterval(updateClock, 1000);
        }

        // --- Initial Load ---
        let savedLanguage = lang;
        try {
            savedLanguage = localStorage.getItem('language') || document.cookie.split('; ').find(row => row.startsWith('language='))?.split('=')[1] || lang;
        } catch (e) {
            console.warn('Language detection failed:', e);
        }

        if (savedLanguage && savedLanguage !== currentLang) {
            currentLang = savedLanguage;
            currentTranslations = getTranslations(currentLang);
        }

        try {
            updateStaticTranslations();
            startClock();
        } catch (e) {
            console.error('Error updating static translations:', e);
        }
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
    } else {
        init();
    }
</script>
