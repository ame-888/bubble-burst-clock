        <div class="predictions-grid">
            {processedPredictions.map(p => (
                <PredictionCard prediction={p} t={t} status={p.status} />
            ))}
        </div>

        <div class="explanation-container">
            <div class="status-legend">
                <div class="status-badge future">
                    <span class="badge-title">FUTURE</span>
                    <span class="badge-desc">Prediction starts later</span>
                </div>
                <div class="status-badge active">
                    <span class="badge-title">ACTIVE</span>
                    <span class="badge-desc">Currently tracking</span>
                </div>
                <div class="status-badge expired">
                    <span class="badge-title">EXPIRED</span>
                    <span class="badge-desc">Failed</span>
                </div>
            </div>
        </div>

    </main>

    <!-- FABs -->
    <button id="fab-bug" class="fab fab-left">
        Report Bug
    </button>

    <button id="fab-submit" class="fab fab-right">
        Submit Prediction
    </button>

</Layout>

