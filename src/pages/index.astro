                const id = el.getAttribute('data-prediction-id');
                const prediction = predictions.find(p => p.id === id);
                if (prediction && prediction.claim) {
                    let newText = '';
                    if (typeof prediction.claim === 'string') {
                        newText = prediction.claim;
                    } else if (typeof prediction.claim === 'object') {
                        newText = prediction.claim[currentLang] || prediction.claim['en'] || Object.values(prediction.claim)[0];
                    }
                    if (newText) {
                         // Wrap in quotes to match server-side styling
                        el.textContent = `"${newText}"`;
                    }
                }
            });
        }

        // --- Clock Logic ---
        function startClock() {
            const clockElement = document.getElementById('big-clock');
            if (!clockElement || !latestClaimDate) return;

            // Achievement: Click Clock
            clockElement.addEventListener('click', () => {
                window.dispatchEvent(new CustomEvent('clock-clicked'));
            });

            const startDate = new Date(latestClaimDate);

            // Calculate time offset: Simulated Server Time - Client Real Time
            // This forces the client to perceive "now" as the simulated server time (Dec 1, 2025)
            // plus whatever seconds pass while the user is on the page.
            const serverTime = simulatedServerTime;
            const clientTime = new Date().getTime();
            const timeOffset = serverTime - clientTime;

            function updateClock() {
                // Effective Now = Client Current Time + Offset
                const now = new Date(new Date().getTime() + timeOffset);
                const diff = now - startDate;

                if (diff < 0) {
                    clockElement.textContent = "00d 00h 00m 00s";
                    return;
                }

                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                const pad = (n) => n.toString().padStart(2, '0');

                clockElement.textContent = `${pad(days)}d ${pad(hours)}h ${pad(minutes)}m ${pad(seconds)}s`;
            }

            updateClock(); // Initial call
            setInterval(updateClock, 1000);
        }

        // --- Sort and Search Logic ---
        function setupSortAndSearch() {
            const sortSelect = document.getElementById('sort-select');
            const searchInput = document.getElementById('search-input');
            const grid = document.getElementById('predictions-grid');

            if (!sortSelect || !grid || !searchInput) return;

            function filterAndSort() {
                const criteria = sortSelect.value;
                const query = searchInput.value.toLowerCase().trim();
                const cards = Array.from(grid.children);

                // Filter
                cards.forEach(card => {
                   const claimText = (card.querySelector('.claim')?.textContent || '').toLowerCase();
                   const creatorText = (card.getAttribute('data-creator') || '').toLowerCase();

                   // Remove quotes from claim text for cleaner search if needed, but keeping simple
                   const matches = claimText.includes(query) || creatorText.includes(query);

                   if (matches) {
                       card.classList.remove('hidden');
                   } else {
                       card.classList.add('hidden');
                   }
                });

                // Sort (only visible cards matters, but we sort all)
                cards.sort((a, b) => {
                    const dateA = new Date(a.getAttribute('data-upload-date') || 0);
                    const dateB = new Date(b.getAttribute('data-upload-date') || 0);
                    const statusA = a.getAttribute('data-status');
                    const statusB = b.getAttribute('data-status');
                    const creatorA = (a.getAttribute('data-creator') || '').toLowerCase();
                    const creatorB = (b.getAttribute('data-creator') || '').toLowerCase();


                    if (criteria === 'newest') {
                        return dateB - dateA;
                    } else if (criteria === 'oldest') {
                        return dateA - dateB;
                    } else if (criteria === 'status') {
                        // Priority: Active (1) > Future (2) > Expired (3)
                        const getPriority = (s) => {
                            if (s === 'ACTIVE') return 1;
                            if (s === 'FUTURE PREDICTION') return 2;
                            if (s === 'EXPIRED') return 3;
                            return 4;
                        };
                        const pA = getPriority(statusA);
                        const pB = getPriority(statusB);

                        if (pA !== pB) return pA - pB;
                        return dateB - dateA; // Fallback to newest
                    } else if (criteria === 'creator_asc') {
                        return creatorA.localeCompare(creatorB);
                    } else if (criteria === 'creator_desc') {
                        return creatorB.localeCompare(creatorA);
                    }
                    return 0;
                });

                // Detach and re-append in new order
                cards.forEach(card => grid.appendChild(card));
            }

            sortSelect.addEventListener('change', filterAndSort);
            searchInput.addEventListener('input', filterAndSort);

            // Initial sort
            filterAndSort();
        }

        // --- Initial Load ---
        let savedLanguage = lang;
        try {
            savedLanguage = localStorage.getItem('language') || document.cookie.split('; ').find(row => row.startsWith('language='))?.split('=')[1] || lang;
        } catch (e) {
            console.warn('Language detection failed:', e);
        }

        if (savedLanguage && savedLanguage !== currentLang) {
            currentLang = savedLanguage;
            currentTranslations = getTranslations(currentLang);
        }

        try {
            updateStaticTranslations();
            startClock();
            setupSortAndSearch();
            setupBetting();
        } catch (e) {
            console.error('Error updating static translations:', e);
        }
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
    } else {
        init();
    }
