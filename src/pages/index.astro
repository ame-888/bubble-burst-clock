// --- PAGE BRAIN ---
import Layout from '../layouts/Layout.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import GameCenter from '../components/GameCenter.astro';
import PredictionCard from '../components/PredictionCard.astro';
import { predictions } from '../data/predictions';
import en from '../locales/en.json';
import ptBR from '../locales/pt-BR.json';
import ja from '../locales/ja.json';
import es from '../locales/es.json';
import zh from '../locales/zh.json';

const translations = {
    'en': en,
    'pt-BR': ptBR,
    'ja': ja,
    'es': es,
    'zh': zh,
};

// --- Language Detection ---
let lang = 'en'; // Default language
const t = translations[lang] || en;

// --- Status Logic ---
// SIMULATED TIME FOR STORY CONTEXT: Dec 1, 2025
// In a real app, this would be new Date().
const now = new Date('2025-12-01T00:00:00Z');
const processedPredictions = predictions.map(p => {
    let status = 'FUTURE PREDICTION'; // Default
    let statusKey = 'future_prediction'; // For translation key lookup

    const start = p.validityStart ? new Date(p.validityStart) : null;
    const end = p.validityEnd ? new Date(p.validityEnd) : null;

    if (start && end) {
        if (now < start) {
            status = 'FUTURE PREDICTION';
            statusKey = 'future_prediction';
        } else if (now >= start && now <= end) {
            status = 'ACTIVE';
            statusKey = 'active_prediction'; // Ensure this key exists or handle fallback
        } else {
            status = 'EXPIRED';
            statusKey = 'expired_prediction'; // Ensure this key exists or handle fallback
        }
    }

    return { ...p, status, statusKey, failureDate: end };
});

// Find the latest failure date for the Clock
const expiredPredictions = processedPredictions.filter(p => p.status === 'EXPIRED');
expiredPredictions.sort((a, b) => b.failureDate - a.failureDate);
const latestExpired = expiredPredictions.length > 0 ? expiredPredictions[0] : null;
const latestClaimDate = latestExpired ? latestExpired.failureDate.toISOString() : null;
const simulatedServerTime = now.getTime(); // Pass to client

---

<Layout lang={lang} title={t.title}>
    <!-- Move specific head elements here -->
    <meta slot="head" name="google-site-verification" content="gi2pzxwjvX7zQtdowKjXbAw1wGHfjs8Cdf2w5ThdNcM" />

    <LanguageSwitcher />
    <div id="game-center-wrapper" class="hidden">
        <GameCenter />
    </div>
    <main>
        <h1 id="main-title" class="interactive-title">{t.title}</h1>
        <h2 id="subtitle">{t.subtitle}</h2>

        <!-- THE CLOCK -->
        <div id="clock-container" class={latestClaimDate ? '' : 'hidden'}>
            <div class="clock-label">TIME SINCE LAST BUBBLE BURST</div>
            <div id="big-clock">00d 00h 00m 00s</div>
            <p id="clock-explanation" class="explanation-text">{t.clock_explanation}</p>
        </div>

        <div class="predictions-grid">
            {processedPredictions.map(p => (
                <PredictionCard prediction={p} t={t} status={p.status} />
            ))}
        </div>

        <div class="explanation-container">
            <p id="status-explanation" class="explanation-text">{t.status_explanation}</p>
        </div>

        <div class="submission-container">
            <div class="submission-content">
                <h3 id="form-heading">{t.form_heading}</h3>
                <p id="form-description">{t.form_description}</p>
                <form action="https://formbold.com/s/3jKWm" method="POST" id="submit-prediction-form">
                    <input type="text" name="name" placeholder={t.name_placeholder} required>
                    <input type="email" name="email" placeholder={t.email_placeholder} required>
                    <textarea name="message" placeholder={t.message_placeholder} required></textarea>
                    <button type="submit" class="submit-button" id="submit-prediction-button">{t.submit_prediction}</button>
                </form>
            </div>
        </div>
    </main>
</Layout>

