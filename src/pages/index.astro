            </form>
        </div>
    </div>

    <div id="benchmark-modal" class="modal hidden">
        <div class="modal-content benchmark-theme">
            <button class="close-modal">&times;</button>
            <h3>Ultimate Visual Bench</h3>
            <div class="benchmark-list">
                {processedBenchmarks.map((m, index) => (
                    <div class="benchmark-item">
                        <div class="rank">#{index + 1}</div>
                        <div class="model-info">
                            <div class="model-name">{m.name}</div>
                            <div class="model-avg">Avg: {m.avg.toFixed(1)}%</div>
                            <div class="level-breakdown">
                                {benchmarks.levels.map(l => (
                                    <div class="level-score">
                                        <span class="level-label">{l.name}:</span>
                                        <span class="level-value">{m.scores[l.id]}%</span>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <main>
        <h1 id="main-title" class="interactive-title">{t.title}</h1>
        <h2 id="subtitle">{t.subtitle}</h2>

        <!-- THE CLOCK -->
        <div class="clock-section-wrapper">
