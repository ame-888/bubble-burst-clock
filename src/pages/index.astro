---
// --- PAGE BRAIN ---
import Layout from '../layouts/Layout.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import GameCenter from '../components/GameCenter.astro';
import PredictionCard from '../components/PredictionCard.astro';
import { predictions } from '../data/predictions';
import en from '../locales/en.json';
import ptBR from '../locales/pt-BR.json';
import ja from '../locales/ja.json';
import es from '../locales/es.json';
import zh from '../locales/zh.json';

const translations = {
    'en': en,
    'pt-BR': ptBR,
    'ja': ja,
    'es': es,
    'zh': zh,
};

// --- Language Detection ---
let lang = 'en'; // Default language
const t = translations[lang] || en;
---

<Layout lang={lang} title={t.title}>
    <!-- Move specific head elements here -->
    <meta slot="head" name="google-site-verification" content="gi2pzxwjvX7zQtdowKjXbAw1wGHfjs8Cdf2w5ThdNcM" />

    <LanguageSwitcher />
    <div id="game-center-wrapper" class="hidden">
        <GameCenter />
    </div>
    <main>
        <h1 id="main-title" class="interactive-title">{t.title}</h1>
        <h2 id="subtitle">{t.subtitle}</h2>

        <div class="predictions-grid">
            {predictions.map(p => (
                <PredictionCard prediction={p} t={t} />
            ))}
        </div>

        <div class="submission-container">
            <div class="submission-content">
                <h3 id="form-heading">{t.form_heading}</h3>
                <p id="form-description">{t.form_description}</p>
                <form action="https://formbold.com/s/3jKWm" method="POST" id="submit-prediction-form">
                    <input type="text" name="name" placeholder={t.name_placeholder} required>
                    <input type="email" name="email" placeholder={t.email_placeholder} required>
                    <textarea name="message" placeholder={t.message_placeholder} required></textarea>
                    <button type="submit" class="submit-button" id="submit-prediction-button">{t.submit_prediction}</button>
                </form>
            </div>
        </div>
    </main>
</Layout>

<style>
    /* Scoped styles for index page */
    body { padding: 2rem; }
    main { max-width: 80rem; margin: auto; }

    /* Modernized Header */
    h1 {
        font-size: 3rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 0.5rem;
        background: linear-gradient(to right, #60A5FA, #A78BFA);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    h2 { font-size: 1.25rem; color: #9CA3AF; text-align: center; margin-bottom: 3rem; }

    /* Predictions Grid */
    .predictions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
        padding: 0 1rem;
    }

    /* Form Styling */
    .submission-container {
        display: flex;
        justify-content: center;
        margin-bottom: 3rem;
    }

    .submission-content {
        max-width: 600px;
        width: 100%;
        padding: 2.5rem;
        background: rgba(31, 41, 55, 0.4);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1.5rem;
        text-align: center;
        box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.5), inset 0 0 20px rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
    }

    /* Subtle glow effect for "flashy" feel */
    .submission-content::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(96, 165, 250, 0.1) 0%, rgba(0,0,0,0) 60%);
        pointer-events: none;
        z-index: 0;
        animation: rotate 20s linear infinite;
    }

    @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .submission-content > * {
        position: relative;
        z-index: 1;
    }

    .submission-content h3 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0 0 0.5rem 0;
        background: linear-gradient(135deg, #F3F4F6 0%, #D1D5DB 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .submission-content p {
        color: #9CA3AF;
        margin-bottom: 2rem;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    #submit-prediction-form {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        width: 100%;
        margin: 0 auto;
    }

    #submit-prediction-form input,
    #submit-prediction-form textarea {
        background-color: rgba(17, 24, 39, 0.6);
        color: white;
        border: 1px solid #4B5563;
        border-radius: 0.75rem;
        padding: 1rem;
        font-family: inherit;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: inset 0 2px 4px rgba(0,0,0,0.2);
    }

    #submit-prediction-form input:focus,
    #submit-prediction-form textarea:focus {
        outline: none;
        border-color: #8B5CF6;
        background-color: rgba(17, 24, 39, 0.9);
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2);
    }

    #submit-prediction-form button {
        cursor: pointer;
    }

    .submit-button {
        display: inline-block;
        background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
        color: white;
        padding: 1rem 2rem;
        border-radius: 0.75rem;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: none;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }

    .submit-button:hover {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 10px 25px -5px rgba(124, 58, 237, 0.5), 0 8px 10px -6px rgba(124, 58, 237, 0.1);
        filter: brightness(1.1);
    }

    .hidden {
        display: none !important;
    }

    .interactive-title {
        cursor: pointer;
        user-select: none;
        transition: transform 0.1s;
    }
    .interactive-title:active {
        transform: scale(0.95);
    }
</style>

<script define:vars={{ lang, t, translations }}>
    function init() {
        // --- Easter Egg Logic ---
        let titleClickCount = 0;
        const mainTitle = document.getElementById('main-title');
        const gameCenterWrapper = document.getElementById('game-center-wrapper');

        if (mainTitle && gameCenterWrapper) {
            mainTitle.addEventListener('click', () => {
                titleClickCount++;
                if (titleClickCount === 5) {
                    gameCenterWrapper.classList.remove('hidden');
                    console.log('Game Center Unlocked! ðŸŽ®');
                    mainTitle.style.color = '#F59E0B'; // Turn title gold temporarily
                    setTimeout(() => {
                        mainTitle.style.color = '';
                    }, 500);
                }
            });
        }

        let currentLang = lang;
        let currentTranslations = t;

        // Function to get translations
        function getTranslations(langCode) {
            return translations[langCode] || translations['en'];
        }

        function updateStaticTranslations() {
            if (!mainTitle) return; // Basic check

            document.title = currentTranslations.title;
            mainTitle.textContent = currentTranslations.title;
            const subtitle = document.getElementById('subtitle');
            if (subtitle) subtitle.textContent = currentTranslations.subtitle;

            const submitBtn = document.getElementById('submit-prediction-button');
            if (submitBtn) submitBtn.textContent = currentTranslations.submit_prediction;

            const formHeading = document.getElementById('form-heading');
            if (formHeading) formHeading.textContent = currentTranslations.form_heading;

            const formDescription = document.getElementById('form-description');
            if (formDescription) formDescription.textContent = currentTranslations.form_description;

            const nameInput = document.querySelector('input[name="name"]');
            if (nameInput) nameInput.placeholder = currentTranslations.name_placeholder;

            const emailInput = document.querySelector('input[name="email"]');
            if (emailInput) emailInput.placeholder = currentTranslations.email_placeholder;

            const messageInput = document.querySelector('textarea[name="message"]');
            if (messageInput) messageInput.placeholder = currentTranslations.message_placeholder;

            // Note: Dynamic content like the prediction cards is rendered server-side in Astro
            // and won't update client-side without full page reload or React/hydration.
            // Since this is a static site mainly, reloading or server-side pref is fine.
            // For now, we only update static elements that have IDs.
            // Future improvement: Use a framework island or re-render logic if needed.
        }

        // --- Initial Load ---
        let savedLanguage = lang;
        try {
            savedLanguage = localStorage.getItem('language') || document.cookie.split('; ').find(row => row.startsWith('language='))?.split('=')[1] || lang;
        } catch (e) {
            console.warn('Language detection failed:', e);
        }

        if (savedLanguage && savedLanguage !== currentLang) {
            currentLang = savedLanguage;
            currentTranslations = getTranslations(currentLang);
        }

        try {
            updateStaticTranslations();
        } catch (e) {
            console.error('Error updating static translations:', e);
        }
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
    } else {
        init();
    }
</script>
