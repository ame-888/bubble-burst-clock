---
// --- PAGE BRAIN ---
import { CLAIMS_DATA } from '../CLAIMS_DATA';
import Layout from '../layouts/Layout.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import GameCenter from '../components/GameCenter.astro';
import en from '../locales/en.json';
import ptBR from '../locales/pt-BR.json';
import ja from '../locales/ja.json';
import es from '../locales/es.json';
import zh from '../locales/zh.json';

const translations = {
    'en': en,
    'pt-BR': ptBR,
    'ja': ja,
    'es': es,
    'zh': zh,
};

// --- Language Detection ---
let lang = 'en'; // Default language
const t = translations[lang] || en;
---

<Layout lang={lang} title={t.title}>
    <!-- Move specific head elements here -->
    <meta slot="head" name="google-site-verification" content="gi2pzxwjvX7zQtdowKjXbAw1wGHfjs8Cdf2w5ThdNcM" />

    <LanguageSwitcher />
    <div id="game-center-wrapper" class="hidden">
        <GameCenter />
    </div>
    <main>
        <h1 id="main-title" class="interactive-title">{t.title}</h1>
        <h2 id="subtitle">{t.subtitle}</h2>

        <div class="submission-container">
            <form action="https://formbold.com/s/3jKWm" method="POST" id="submit-prediction-form">
                <input type="text" name="name" placeholder="Your Name" required>
                <input type="email" name="email" placeholder="Your Email" required>
                <textarea name="message" placeholder="Your Prediction" required></textarea>
                <button type="submit" class="submit-button" id="submit-prediction-button">{t.submit_prediction}</button>
            </form>
        </div>

        <div id="cards-grid" class="cards-grid">
            <!-- Cards will be injected here by JS -->
        </div>

    </main>
</Layout>

<style>
    /* Scoped styles for index page */
    body { padding: 2rem; }
    main { max-width: 80rem; margin: auto; }

    /* Modernized Header */
    h1 {
        font-size: 3rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 0.5rem;
        background: linear-gradient(to right, #60A5FA, #A78BFA);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    h2 { font-size: 1.25rem; color: #9CA3AF; text-align: center; margin-bottom: 3rem; }

    /* Form Styling */
    .submission-container {
        text-align: center;
        margin-bottom: 3rem;
    }
    #submit-prediction-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        max-width: 500px;
        margin: 0 auto;
        padding: 2rem;
        background: rgba(31, 41, 55, 0.4);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 1rem;
    }
    #submit-prediction-form input,
    #submit-prediction-form textarea {
        background-color: rgba(17, 24, 39, 0.6);
        color: white;
        border: 1px solid #4B5563;
        border-radius: 0.5rem;
        padding: 0.75rem;
        font-family: inherit;
        transition: border-color 0.3s;
    }
    #submit-prediction-form input:focus,
    #submit-prediction-form textarea:focus {
        outline: none;
        border-color: #60A5FA;
    }
    #submit-prediction-form button {
        cursor: pointer;
    }
    .submit-button {
        display: inline-block;
        background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: none;
    }
    .submit-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
    }

    /* Grid Layout */
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .claim-card {
        background: rgba(31, 41, 55, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .claim-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3);
        border-color: rgba(96, 165, 250, 0.3);
    }

    .card-thumbnail-container {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 Aspect Ratio */
        overflow: hidden;
    }

    .card-thumbnail {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .claim-card:hover .card-thumbnail {
        transform: scale(1.05);
    }

    .card-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .card-date {
        font-size: 0.875rem;
        color: #9CA3AF;
    }

    .card-claimer {
        font-weight: 600;
        color: white;
        margin-bottom: 0.5rem;
    }

    .card-summary-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(17, 24, 39, 0.9);
        padding: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        backdrop-filter: blur(5px);
        text-align: center;
    }

    .claim-card:hover .card-summary-overlay {
        opacity: 1;
        pointer-events: none;
    }

    .card-thumbnail-link {
        display: block;
        width: 100%;
        height: 100%;
    }

    .card-text {
        color: #E5E7EB;
        font-size: 1rem;
        line-height: 1.5;
    }

    /* Status Badges */
    .badge {
        display: inline-flex;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    .status-ongoing { background-color: rgba(6, 95, 70, 0.2); color: #6EE7B7; border: 1px solid rgba(6, 95, 70, 0.5); }
    .status-default { background-color: rgba(31, 41, 55, 0.5); color: #9CA3AF; border: 1px solid #4B5563; }


    .hidden {
        display: none !important;
    }

    .interactive-title {
        cursor: pointer;
        user-select: none;
        transition: transform 0.1s;
    }
    .interactive-title:active {
        transform: scale(0.95);
    }
</style>

<script define:vars={{ lang, t, translations, CLAIMS_DATA }}>
    function init() {
        // --- Easter Egg Logic ---
        let titleClickCount = 0;
        const mainTitle = document.getElementById('main-title');
        const gameCenterWrapper = document.getElementById('game-center-wrapper');

        if (mainTitle && gameCenterWrapper) {
            mainTitle.addEventListener('click', () => {
                titleClickCount++;
                if (titleClickCount === 5) {
                    gameCenterWrapper.classList.remove('hidden');
                    console.log('Game Center Unlocked! ðŸŽ®');
                    mainTitle.style.color = '#F59E0B'; // Turn title gold temporarily
                    setTimeout(() => {
                        mainTitle.style.color = '';
                    }, 500);
                }
            });
        }

        let currentLang = lang;
        let currentTranslations = t;

        // Function to get translations
        function getTranslations(langCode) {
            return translations[langCode] || translations['en'];
        }

        // Helper functions to style the status cells
        const getStatusClass = (status) => {
            if (status.toLowerCase().startsWith('ongoing')) return 'status-ongoing';
            return 'status-default';
        };


        function updateStaticTranslations() {
            if (!mainTitle) return; // Basic check

            document.title = currentTranslations.title;
            mainTitle.textContent = currentTranslations.title;
            const subtitle = document.getElementById('subtitle');
            if (subtitle) subtitle.textContent = currentTranslations.subtitle;

            const submitBtn = document.getElementById('submit-prediction-button');
            if (submitBtn) submitBtn.textContent = currentTranslations.submit_prediction;
        }

        const cardsGrid = document.getElementById('cards-grid');

        function renderCards() {
            if (!cardsGrid) return;
            cardsGrid.innerHTML = '';
            CLAIMS_DATA.forEach(claim => {
                const card = document.createElement('div');
                card.className = 'claim-card';

                const claimText = claim.claim[currentLang] || claim.claim['en'];
                const statusText = currentTranslations[claim.status] || claim.status;
                const statusClass = getStatusClass(claim.status);

                card.innerHTML = `
                    <div class="card-thumbnail-container">
                        <a href="${claim.link}" target="_blank" rel="noopener noreferrer" class="card-thumbnail-link">
                             <img src="${claim.thumbnailUrl}" alt="Thumbnail" class="card-thumbnail" referrerPolicy="no-referrer" loading="lazy" />
                             <div class="card-summary-overlay">
                                <p class="card-text">"${claimText}"</p>
                             </div>
                        </a>
                    </div>
                    <div class="card-content">
                        <div class="card-header">
                            <span class="badge ${statusClass}">${statusText}</span>
                            <span class="card-date">${claim.date}</span>
                        </div>
                        <h3 class="card-claimer">${claim.claimer}</h3>
                    </div>
                `;
                cardsGrid.appendChild(card);
            });
        }


        // --- Initial Load ---
        let savedLanguage = lang;
        try {
            savedLanguage = localStorage.getItem('language') || document.cookie.split('; ').find(row => row.startsWith('language='))?.split('=')[1] || lang;
        } catch (e) {
            console.warn('Language detection failed:', e);
        }

        if (savedLanguage && savedLanguage !== currentLang) {
            currentLang = savedLanguage;
            currentTranslations = getTranslations(currentLang);
        }

        try {
            updateStaticTranslations();
            renderCards();
        } catch (e) {
            console.error('Error updating static translations:', e);
        }
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
    } else {
        init();
    }
</script>
