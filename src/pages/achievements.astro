---
import Layout from '../layouts/Layout.astro';
import en from '../locales/en.json';
import ptBR from '../locales/pt-BR.json';
import ja from '../locales/ja.json';
import es from '../locales/es.json';
import zh from '../locales/zh.json';
import { achievements } from '../data/achievements';

const translations = {
    'en': en,
    'pt-BR': ptBR,
    'ja': ja,
    'es': es,
    'zh': zh,
};

// We default to 'en' for SSR; client will hydrate correctly
const lang = 'en';
const t = translations[lang];
---

<Layout lang={lang} title={`Achievements - ${t.title}`}>
    <main>
        <h1 id="achievements-title">Achievements</h1>
        <p class="subtitle" id="achievements-subtitle">Uncover the secrets of the Bubble Burst Clock.</p>

        <!-- Pet Section (Hidden by default, shown via JS) -->
        <div id="pet-section" class="pet-section hidden">
            <h2 class="pet-section-title" data-i18n-key="pet_section_title">{t.pet_section_title}</h2>
            <div class="pet-container">
                <div class="pet-display">
                    <!-- Simple Pixel Art Egg / Dragon -->
                    <svg id="pet-svg" width="100" height="100" viewBox="0 0 100 100" class="pet-sprite">
                        <!-- Pixel art styling via rects will be injected by JS based on state -->
                    </svg>
                    <div id="pet-hearts" class="pet-hearts"></div>
                </div>
                <div class="pet-controls">
                    <h3 id="pet-name-display" class="pet-name hidden"></h3>

                    <div id="pet-name-input-container" class="pet-input-group">
                        <input type="text" id="pet-name-input" data-i18n-placeholder="pet_name_placeholder" placeholder={t.pet_name_placeholder} maxlength="12" />
                        <button id="pet-save-btn" class="pet-btn save" data-i18n-key="pet_button_save">{t.pet_button_save}</button>
                    </div>

                    <div id="pet-actions" class="pet-actions hidden">
                        <button id="pet-action-pet" class="pet-btn action" data-i18n-key="pet_button_pet">{t.pet_button_pet}</button>
                        <button id="pet-action-release" class="pet-btn release" data-i18n-key="pet_button_release">{t.pet_button_release}</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="achievements-grid" id="achievements-grid">
            {achievements.map(achievement => (
                <div class="achievement-card locked" data-id={achievement.id}>
                    <div class="achievement-icon-wrapper">
                        <div class="achievement-icon-placeholder">?</div>
                        <div class="achievement-icon-real hidden">{achievement.icon}</div>
                    </div>
                    <div class="achievement-content">
                        <h3 class="achievement-card-title">???</h3>
                        <p class="achievement-desc">Locked Secret</p>
                    </div>
                    <div class="status-indicator">
                        <span class="lock-icon">ðŸ”’</span>
                        <span class="unlock-icon hidden">âœ…</span>
                    </div>

                    <!-- Hidden data for JS to use when unlocking -->
                    <template class="achievement-data">
                        <div class="data-title">{achievement.title}</div>
                        <div class="data-desc">{achievement.description}</div>
                    </template>
                </div>
            ))}
        </div>

        <!-- Danger Zone -->
        <div class="danger-zone">
            <h2 data-i18n-key="reset_zone_title">{t.reset_zone_title}</h2>
            <button id="reset-achievements-btn" class="reset-btn" data-i18n-key="reset_btn">{t.reset_btn}</button>
        </div>

        <div class="secret-input-container">
            <input type="text" id="secret-input" class="secret-input" placeholder="Enter password..." autocomplete="off">
        </div>
    </main>

    <!-- Reset Confirmation Modal -->
    <div id="reset-modal" class="modal-overlay hidden">
        <div class="modal-content">
            <h2 class="modal-title" data-i18n-key="reset_modal_title">{t.reset_modal_title}</h2>
            <p class="modal-msg" data-i18n-key="reset_modal_msg">{t.reset_modal_msg}</p>
            <div class="modal-actions">
                <button id="cancel-reset-btn" class="modal-btn cancel" data-i18n-key="reset_modal_cancel">{t.reset_modal_cancel}</button>
                <button id="confirm-reset-btn" class="modal-btn confirm" data-i18n-key="reset_modal_confirm">{t.reset_modal_confirm}</button>
            </div>
        </div>
    </div>
</Layout>

<style>
    main {
        max-width: 80rem;
        margin: 4rem auto;
        padding: 0 1rem;
    }

    h1 {
        font-size: 3rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 0.5rem;
        color: white;
        background: linear-gradient(to right, #F59E0B, #D97706);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        text-align: center;
        color: #9CA3AF;
        margin-bottom: 3rem;
        font-size: 1.2rem;
    }

    /* Pet Section Styles */
    .pet-section {
        background: rgba(16, 185, 129, 0.1);
        border: 2px solid #10B981;
        border-radius: 1rem;
        padding: 2rem;
        margin-bottom: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0 0 30px rgba(16, 185, 129, 0.1);
    }

    .pet-section-title {
        color: #10B981;
        margin-top: 0;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .pet-container {
        display: flex;
        align-items: center;
        gap: 3rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .pet-display {
        position: relative;
        width: 120px;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .pet-sprite {
        width: 100%;
        height: 100%;
        image-rendering: pixelated;
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .pet-hearts {
        position: absolute;
        top: -20px;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .pet-controls {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .pet-name {
        font-size: 2rem;
        font-weight: 900;
        color: white;
        margin: 0;
    }

    .pet-input-group {
        display: flex;
        gap: 0.5rem;
    }

    #pet-name-input {
        background: rgba(0,0,0,0.3);
        border: 1px solid #4B5563;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-family: inherit;
    }

    .pet-btn {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.5rem;
        font-weight: 700;
        cursor: pointer;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .pet-btn.save { background: #10B981; color: white; }
    .pet-btn.action { background: #3B82F6; color: white; }
    .pet-btn.release { background: transparent; border: 1px solid #EF4444; color: #EF4444; }
    .pet-btn.release:hover { background: #EF4444; color: white; }

    .achievements-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .achievement-card {
        background: rgba(31, 41, 55, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .achievement-card.locked {
        opacity: 0.7;
        filter: grayscale(1);
    }

    .achievement-card.unlocked {
        background: rgba(31, 41, 55, 0.8);
        border-color: #F59E0B;
        box-shadow: 0 0 20px rgba(245, 158, 11, 0.15);
        opacity: 1;
        filter: none;
        transform: translateY(-2px);
    }

    /* Revealed but locked state */
    .achievement-card.revealed {
        filter: grayscale(0.8);
        opacity: 0.9;
        border-color: #4B5563;
    }

    .achievement-icon-wrapper {
        width: 60px;
        height: 60px;
        flex-shrink: 0;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        border: 2px solid rgba(255, 255, 255, 0.1);
    }

    .achievement-card.unlocked .achievement-icon-wrapper {
        background: rgba(245, 158, 11, 0.2);
        border-color: #F59E0B;
    }

    .achievement-content {
        flex: 1;
    }

    .achievement-card-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: white;
        margin: 0 0 0.25rem 0;
    }

    .achievement-desc {
        font-size: 0.9rem;
        color: #9CA3AF;
        margin: 0;
        line-height: 1.4;
    }

    .status-indicator {
        position: absolute;
        top: 1rem;
        right: 1rem;
        font-size: 1.2rem;
    }

    .hidden {
        display: none !important;
    }

    .secret-input-container {
        margin-top: 4rem;
        display: flex;
        justify-content: center;
        opacity: 0.2;
        transition: opacity 0.3s;
    }
    .secret-input-container:hover, .secret-input-container:focus-within {
        opacity: 1;
    }

    .secret-input {
        background: rgba(0,0,0,0.3);
        border: 1px solid #4B5563;
        color: #10B981;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-family: monospace;
        text-align: center;
        outline: none;
        width: 200px;
    }
    .secret-input:focus {
        border-color: #10B981;
        box-shadow: 0 0 10px rgba(16, 185, 129, 0.2);
    }

    /* Danger Zone */
    .danger-zone {
        margin-top: 6rem;
        padding: 2rem;
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 1rem;
        background: rgba(239, 68, 68, 0.05);
        text-align: center;
    }

    .danger-zone h2 {
        color: #EF4444;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .reset-btn {
        background-color: #B91C1C;
        color: white;
        border: none;
        padding: 1rem 2rem;
        font-size: 1rem;
        font-weight: 700;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: background-color 0.2s;
        text-transform: uppercase;
    }

    .reset-btn:hover {
        background-color: #DC2626;
    }

    /* Modal */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(5px);
    }

    .modal-content {
        background: #1F2937;
        border: 2px solid #EF4444;
        padding: 2.5rem;
        border-radius: 1rem;
        max-width: 500px;
        width: 90%;
        text-align: center;
        box-shadow: 0 0 50px rgba(239, 68, 68, 0.3);
        animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
    }

    @keyframes shake {
        10%, 90% { transform: translate3d(-1px, 0, 0); }
        20%, 80% { transform: translate3d(2px, 0, 0); }
        30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
        40%, 60% { transform: translate3d(4px, 0, 0); }
    }

    .modal-title {
        color: #EF4444;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .modal-msg {
        font-size: 1.1rem;
        margin-bottom: 2rem;
        font-weight: 600;
        line-height: 1.6;
    }

    .modal-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .modal-btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 700;
        cursor: pointer;
        border: none;
        font-size: 1rem;
    }

    .modal-btn.cancel {
        background: #374151;
        color: white;
    }

    .modal-btn.confirm {
        background: #DC2626;
        color: white;
    }

    .modal-btn:hover {
        opacity: 0.9;
    }
</style>

<script>
    import { achievementManager } from '../scripts/AchievementManager';

    document.addEventListener('DOMContentLoaded', () => {
        // Force a check on load to ensure sync
        achievementManager.init();

        const unlockedIds = achievementManager.unlocked;
        const cards = document.querySelectorAll('.achievement-card');
        let revealed = false;

        try {
            if (localStorage.getItem('achievements_revealed') === 'true') {
                revealed = true;
            }
        } catch(e) {}

        cards.forEach(card => {
            const id = card.getAttribute('data-id');
            const isUnlocked = unlockedIds.has(id);

            if (isUnlocked) {
                unlockCard(card);
            } else if (revealed) {
                revealCard(card);
            }
        });

        // --- Pet Logic ---
        const petSection = document.getElementById('pet-section');
        const petNameInput = document.getElementById('pet-name-input');
        const petSaveBtn = document.getElementById('pet-save-btn');
        const petNameDisplay = document.getElementById('pet-name-display');
        const petInputContainer = document.getElementById('pet-name-input-container');
        const petActions = document.getElementById('pet-actions');
        const petActionPet = document.getElementById('pet-action-pet');
        const petActionRelease = document.getElementById('pet-action-release');
        const petSvg = document.getElementById('pet-svg');

        // Check for Pet
        const hasPet = localStorage.getItem('has_pet');
        if (hasPet) {
            petSection.classList.remove('hidden');
            renderPet();

            // Check for name
            const petName = localStorage.getItem('pet_name');
            if (petName) {
                showPetName(petName);
            } else {
                showPetNaming();
            }
        }

        if (petSaveBtn) {
            petSaveBtn.addEventListener('click', () => {
                const name = (petNameInput as HTMLInputElement).value.trim();
                if (name) {
                    localStorage.setItem('pet_name', name);
                    showPetName(name);
                }
            });
        }

        if (petActionPet) {
            petActionPet.addEventListener('click', () => {
                // Heart Animation
                const container = document.getElementById('pet-hearts');
                const heart = document.createElement('div');
                heart.textContent = 'â¤ï¸';
                heart.style.position = 'absolute';
                heart.style.left = '50%';
                heart.style.bottom = '0';
                heart.style.fontSize = '24px';
                heart.style.transform = `translateX(-50%)`;
                heart.style.animation = 'floatHeart 1s ease-out forwards';

                // Add keyframes dynamically if not present
                if (!document.getElementById('heart-anim')) {
                    const style = document.createElement('style');
                    style.id = 'heart-anim';
                    style.textContent = `
                        @keyframes floatHeart {
                            0% { transform: translateX(-50%) translateY(0) scale(0.5); opacity: 1; }
                            100% { transform: translateX(-50%) translateY(-50px) scale(1.2); opacity: 0; }
                        }
                    `;
                    document.head.appendChild(style);
                }

                container.appendChild(heart);
                setTimeout(() => heart.remove(), 1000);
            });
        }

        if (petActionRelease) {
            petActionRelease.addEventListener('click', () => {
                // Confirmation
                const t = {
                    confirm: document.querySelector('[data-i18n-key="pet_release_confirm"]')?.textContent || "Are you sure?"
                };
                if (confirm(t.confirm)) {
                    localStorage.removeItem('has_pet');
                    localStorage.removeItem('pet_name');
                    petSection.classList.add('hidden');
                }
            });
        }

        function showPetName(name) {
            petNameDisplay.textContent = name;
            petNameDisplay.classList.remove('hidden');
            petActions.classList.remove('hidden');
            petInputContainer.classList.add('hidden');
        }

        function showPetNaming() {
            petNameDisplay.classList.add('hidden');
            petActions.classList.add('hidden');
            petInputContainer.classList.remove('hidden');
        }

        function renderPet() {
            // Simple 8x8 Pixel Dragon/Egg thing
            // Let's draw a cute little green guy
            const pixels = [
                "00000000",
                "00011000",
                "00111100",
                "01100110",
                "01100110",
                "01111110",
                "00111100",
                "00100100"
            ];
            const size = 12.5; // 100 / 8
            let svgContent = '';

            pixels.forEach((row, y) => {
                row.split('').forEach((pixel, x) => {
                    if (pixel === '1') {
                        svgContent += `<rect x="${x * size}" y="${y * size}" width="${size}" height="${size}" fill="#10B981" />`;
                    }
                });
            });
            // Eyes
            svgContent += `<rect x="${3 * size}" y="${3 * size}" width="${size}" height="${size}" fill="black" />`;
            svgContent += `<rect x="${6 * size}" y="${3 * size}" width="${size}" height="${size}" fill="black" />`;

            petSvg.innerHTML = svgContent;
        }


        // Secret Input Logic
        const input = document.getElementById('secret-input');
        if (input) {
            input.addEventListener('input', (e) => {
                const val = (e.target as HTMLInputElement).value.trim().toLowerCase();
                if (val === 'truth') {
                    // Password Correct!
                    localStorage.setItem('achievements_revealed', 'true');
                    achievementManager.unlock('truth_seeker');
                    (e.target as HTMLInputElement).value = '';
                    (e.target as HTMLInputElement).blur();

                    // Reload to update UI state properly (easiest way)
                    location.reload();
                }
            });
        }

        // Reset Button Logic
        const resetBtn = document.getElementById('reset-achievements-btn');
        const modal = document.getElementById('reset-modal');
        const cancelBtn = document.getElementById('cancel-reset-btn');
        const confirmBtn = document.getElementById('confirm-reset-btn');

        if (resetBtn && modal) {
            resetBtn.addEventListener('click', () => {
                modal.classList.remove('hidden');
            });

            cancelBtn.addEventListener('click', () => {
                modal.classList.add('hidden');
            });

            confirmBtn.addEventListener('click', () => {
                try {
                    localStorage.removeItem('achievements_unlocked');
                    localStorage.removeItem('has_pet');
                    localStorage.removeItem('pet_name');
                    // We don't remove other data like clicks/time, just the unlocked status
                    // Reload to reflect changes
                    location.reload();
                } catch (e) {
                    console.error("Error resetting achievements", e);
                }
            });

            // Close on click outside
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.classList.add('hidden');
                }
            });
        }
    });

    function unlockCard(card) {
        card.classList.remove('locked', 'revealed');
        card.classList.add('unlocked');

        // Swap Icons
        card.querySelector('.achievement-icon-placeholder').classList.add('hidden');
        card.querySelector('.achievement-icon-real').classList.remove('hidden');

        // Swap Status
        card.querySelector('.lock-icon').classList.add('hidden');
        card.querySelector('.unlock-icon').classList.remove('hidden');

        // Reveal Text
        const template = card.querySelector('.achievement-data');
        if (template) {
            const title = template.content.querySelector('.data-title').textContent;
            const desc = template.content.querySelector('.data-desc').textContent;

            card.querySelector('.achievement-card-title').textContent = title;
            card.querySelector('.achievement-desc').textContent = desc;
        }
    }

    function revealCard(card) {
        // Show details but keep locked visual
        card.classList.remove('locked');
        card.classList.add('revealed');

        // Swap Icons (optional, maybe keep ? for mystery but show text?)
        // Let's show icon too if revealed
        card.querySelector('.achievement-icon-placeholder').classList.add('hidden');
        card.querySelector('.achievement-icon-real').classList.remove('hidden');

        // Keep lock icon
        card.querySelector('.lock-icon').classList.remove('hidden');

        // Reveal Text
        const template = card.querySelector('.achievement-data');
        if (template) {
            const title = template.content.querySelector('.data-title').textContent;
            const desc = template.content.querySelector('.data-desc').textContent;

            card.querySelector('.achievement-card-title').textContent = title;
            card.querySelector('.achievement-desc').textContent = desc;
        }
    }
</script>

<script define:vars={{ translations, lang }}>
    // Client-side translation update for static text
    function updateTranslations() {
        let currentLang = lang;
        try {
            currentLang = localStorage.getItem('language') || document.cookie.split('; ').find(row => row.startsWith('language='))?.split('=')[1] || lang;
        } catch (e) {}

        const t = translations[currentLang] || translations['en'];

        document.querySelectorAll('[data-i18n-key]').forEach(el => {
            const key = el.getAttribute('data-i18n-key');
            if (t[key]) el.textContent = t[key];
        });

        document.querySelectorAll('[data-i18n-placeholder]').forEach(el => {
            const key = el.getAttribute('data-i18n-placeholder');
            if (t[key]) el.placeholder = t[key];
        });
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', updateTranslations);
    } else {
        updateTranslations();
    }
</script>
