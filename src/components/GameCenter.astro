<style>
    /* Modern Glassmorphism & Animations */
    #joystick-btn {
        position: fixed;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        pointer-events: auto;
        background: rgba(31, 41, 55, 0.8);
        color: #60A5FA;
        border: 2px solid #60A5FA;
        border-radius: 50%;
        width: 4rem;
        height: 4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 0 20px rgba(96, 165, 250, 0.4);
        backdrop-filter: blur(5px);
    }

    #joystick-btn:hover {
        background: rgba(55, 65, 81, 0.9);
        transform: translateX(-50%) scale(1.15) rotate(10deg);
        box-shadow: 0 0 30px rgba(96, 165, 250, 0.8);
        border-color: #93C5FD;
        color: #93C5FD;
    }

    #joystick-btn:active {
        transform: translateX(-50%) scale(0.95);
    }

    .joystick-icon {
        width: 2rem;
        height: 2rem;
        pointer-events: none;
    }

    /* Modal Styling */
    #game-modal {
        position: fixed;
        inset: 0;
        z-index: 10000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s, visibility 0.3s;
    }

    #game-modal:not(.hidden) {
        opacity: 1;
        visibility: visible;
    }

    .modal-overlay {
        position: absolute;
        inset: 0;
        background: rgba(3, 7, 18, 0.7); /* Deep dark blue/black */
        backdrop-filter: blur(8px);
    }

    .modal-content.glass-panel {
        position: relative;
        background: rgba(17, 24, 39, 0.85);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow:
            0 0 0 1px rgba(255, 255, 255, 0.05),
            0 20px 50px rgba(0, 0, 0, 0.7),
            0 0 100px rgba(96, 165, 250, 0.1); /* Subtle blue glow */
        backdrop-filter: blur(16px);
        border-radius: 1.5rem;
        padding: 2rem;
        width: 95%;
        max-width: 500px;
        color: #F3F4F6;
        display: flex;
        flex-direction: column;
        max-height: 90vh;
        overflow-y: auto;
        transform: scale(0.95);
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    #game-modal:not(.hidden) .modal-content {
        transform: scale(1);
    }

    .modal-header {
        display: grid;
        grid-template-columns: 2.5rem 1fr 2.5rem 2.5rem;
        gap: 0.5rem;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    #modal-title {
        font-size: 1.8rem;
        font-weight: 800;
        background: linear-gradient(135deg, #60A5FA 0%, #A78BFA 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
        letter-spacing: -0.02em;
        text-align: center;
    }

    /* Fix for Title Display Error: preserve space when hidden */
    #header-back-btn.hidden {
        display: block !important;
        visibility: hidden;
    }

    #header-back-btn, #close-modal-btn, #suggest-game-btn {
        background: rgba(255, 255, 255, 0.05);
        border: none;
        color: #9CA3AF;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }

    #header-back-btn:hover, #close-modal-btn:hover, #suggest-game-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    #suggest-game-btn {
        font-size: 1.2rem;
    }

    #close-modal-btn:hover {
        transform: rotate(90deg);
    }

    /* Menu Buttons */
    #game-menu {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .game-select-btn {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 1.25rem;
        border-radius: 1rem;
        color: #E5E7EB;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.2s ease-out;
    }

    .game-select-btn:hover {
        background: rgba(96, 165, 250, 0.1);
        border-color: rgba(96, 165, 250, 0.3);
        transform: translateX(5px);
    }

    .game-icon {
        font-size: 1.5rem;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    }

    #leaderboard-btn {
        margin-top: 1rem;
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(217, 119, 6, 0.1) 100%);
        border-color: rgba(245, 158, 11, 0.2);
        color: #FCD34D;
    }

    #leaderboard-btn:hover {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.2) 100%);
        border-color: rgba(245, 158, 11, 0.5);
    }

    /* Canvas Area */
    .game-canvas-wrapper {
        position: relative;
        width: 100%;
        aspect-ratio: 1;
        background: #000; /* Deep black for contrast */
        border: 2px solid rgba(55, 65, 81, 0.5);
        border-radius: 1rem;
        overflow: hidden;
        margin-bottom: 1.5rem;
        box-shadow: inset 0 0 30px rgba(0,0,0,0.8);
    }

    canvas {
        width: 100%;
        height: 100%;
        display: block;
        image-rendering: pixelated; /* Sharp rendering */
    }

    /* Cutscene Overlay */
    #cutscene-overlay {
        position: absolute;
        inset: 0;
        background: rgba(220, 38, 38, 0.2);
        backdrop-filter: blur(2px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 30;
        animation: flashRed 1s infinite alternate;
    }

    .cutscene-content {
        background: #000;
        border: 2px solid #EF4444;
        padding: 2rem;
        text-align: center;
        color: #EF4444;
        box-shadow: 0 0 50px rgba(239, 68, 68, 0.5);
        transform: rotate(-2deg);
    }

    .glitch-text {
        font-size: 3rem;
        font-weight: 900;
        text-transform: uppercase;
        position: relative;
        animation: glitch 1s infinite;
    }

    .cutscene-msg {
        font-size: 1.2rem;
        font-weight: bold;
        margin: 1rem 0;
    }

    .cutscene-sub {
        font-size: 0.9rem;
        color: #FECACA;
        animation: blink 0.5s infinite;
    }

    @keyframes flashRed {
        from { background: rgba(220, 38, 38, 0.1); }
        to { background: rgba(220, 38, 38, 0.3); }
    }

    @keyframes blink {
        50% { opacity: 0; }
    }

    /* Game Overlay */
    #game-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(4px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        z-index: 20;
        animation: fadeIn 0.3s;
    }

    #game-overlay-title {
        font-size: 2.5rem;
        color: #F87171;
        margin: 0;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-shadow: 0 0 20px rgba(248, 113, 113, 0.5);
    }

    #game-overlay button {
        padding: 1rem 2rem;
        border-radius: 0.75rem;
        border: none;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        width: 80%;
        transition: transform 0.1s, filter 0.2s;
        text-transform: uppercase;
