---
const { mode = 'modal' } = Astro.props;
---
<div id="game-center-container" data-mode={mode}>
    {mode === 'modal' && (
        <button id="joystick-btn" aria-label="Open Game Center" title="Play Games">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="joystick-icon">
                <rect x="2" y="6" width="20" height="12" rx="2"></rect>
                <path d="M6 12h4"></path>
                <path d="M8 10v4"></path>
                <line x1="15" y1="13" x2="15.01" y2="13"></line>
                <line x1="18" y1="11" x2="18.01" y2="11"></line>
            </svg>
        </button>
    )}

    <div id="game-modal" class={mode === 'embedded' ? 'embedded-view' : 'hidden'}>
        {mode === 'modal' && <div class="modal-overlay"></div>}
        <div class="modal-content glass-panel">
            <div class="modal-header">
                <button id="header-back-btn" class="hidden" aria-label="Back to Menu">‚Üê</button>
                <h2 id="modal-title">AI Arcade</h2>
                <button id="suggest-game-btn" aria-label="Suggest a Game" title="Suggest a Game">üí°</button>
                <button id="close-modal-btn" aria-label="Close">&times;</button>
            </div>

            <div id="game-menu" class="fade-in">
                <button class="game-select-btn" data-game="pool">
                    <div class="game-icon">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <circle cx="12" cy="12" r="10"/>
                            <circle cx="12" cy="12" r="4" fill="#000"/>
                            <text x="12" y="14" text-anchor="middle" fill="#FFF" font-size="6" font-weight="bold">8</text>
                        </svg>
                    </div>
                    Neural Pool
                </button>
                <button class="game-select-btn" data-game="adventure">
                     <div class="game-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                            <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                        </svg>
                    </div>
                    The Unpoppable
                </button>
                <button class="game-select-btn" data-game="tetris">
                     <div class="game-icon">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <rect x="4" y="12" width="8" height="8" rx="1"/>
                            <rect x="12" y="12" width="8" height="8" rx="1"/>
                            <rect x="12" y="4" width="8" height="8" rx="1"/>
                        </svg>
                    </div>
                    Cluster Builder
                </button>
                <button class="game-select-btn" data-game="snake">
                     <div class="game-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="4" y="4" width="16" height="16" rx="4"/>
                            <path d="M9 9h6v6h-3"/>
                        </svg>
                    </div>
                    Data Stream
                </button>
                <button class="game-select-btn" data-game="breakout">
                     <div class="game-icon">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <rect x="4" y="4" width="4" height="2"/>
                            <rect x="10" y="4" width="4" height="2"/>
                            <rect x="16" y="4" width="4" height="2"/>
                            <rect x="7" y="8" width="4" height="2"/>
                            <rect x="13" y="8" width="4" height="2"/>
                            <rect x="8" y="18" width="8" height="2"/>
                            <circle cx="12" cy="14" r="2"/>
                        </svg>
                    </div>
                    Firewall Breaker
                </button>
                <button class="game-select-btn" data-game="tictactoe">
                     <div class="game-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4l16 16"/>
                            <path d="M20 4L4 20"/>
                        </svg>
                    </div>
                    Neural Nodes
                </button>
                <button class="game-select-btn" id="leaderboard-btn">
                     <div class="game-icon">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M4 6h16v2H4z"/>
                            <path d="M4 10h12v2H4z"/>
                            <path d="M4 14h8v2H4z"/>
                            <path d="M18 10l4 4-4 4"/>
                        </svg>
                    </div>
                    High Scores
                </button>
            </div>

            <div id="leaderboard-view" class="hidden fade-in">
                <h3>Top Scores</h3>
                <div id="leaderboard-content"></div>
            </div>

            <div id="game-area" class="hidden fade-in game-layout-wrapper">
                <div class="game-left-col">
                    <div id="pool-controls" class="hidden" style="margin-bottom: 0.5rem; display: flex; justify-content: center; gap: 1rem;">
                        <button id="pool-mode-btn" style="padding: 0.5rem 1rem; border-radius: 0.5rem; background: #374151; color: white; border: none; cursor: pointer;">Switch to VS AI</button>
                    </div>

                    <div id="adventure-container" class="hidden" style="width: 100%; aspect-ratio: 1; background: #000; border: 2px solid #374151; border-radius: 1rem; padding: 1.5rem; display: flex; flex-direction: column; overflow: hidden;">
                        <div id="adventure-text" style="flex-grow: 1; overflow-y: auto; color: #10B981; font-family: 'Courier New', monospace; font-size: 1rem; line-height: 1.5; margin-bottom: 1rem;"></div>
                        <div id="adventure-choices" style="display: flex; flex-direction: column; gap: 0.5rem;"></div>
                    </div>

                    <div id="canvas-container" class="game-canvas-wrapper">
                        <canvas id="game-canvas" width="400" height="400"></canvas>
                        <div id="game-overlay" class="hidden">
                            <h3 id="game-overlay-title">Game Over</h3>
                            <p id="game-overlay-score">Score: 0</p>
                            <button id="game-restart-btn">Play Again</button>
                            <button id="game-quit-btn">Quit to Menu</button>
                        </div>
                        <!-- Cutscene Overlay -->
                        <div id="cutscene-overlay" class="hidden">
                            <div class="cutscene-content">
                                <div class="glitch-text" data-text="WARNING">WARNING</div>
                                <p class="cutscene-msg">UNAUTHORIZED WIN STREAK DETECTED</p>
                                <p class="cutscene-sub">ENGAGING MAX DIFFICULTY PROTOCOL...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="game-controls-info">
                    <div class="score-card">
                        <div class="score-label">SCORE</div>
                        <div class="score-display" id="current-score">0</div>
                    </div>
                    <div class="info-card">
                        <p id="controls-hint">Controls Info</p>
                    </div>
                    <!-- Duplicate Quit button for side access on large screens -->
                    <button id="side-quit-btn" class="side-btn">Quit Game</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Modern Glassmorphism & Animations */
    #joystick-btn {
        position: fixed;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        pointer-events: auto;
        background: rgba(31, 41, 55, 0.8);
        color: #60A5FA;
        border: 2px solid #60A5FA;
        border-radius: 50%;
        width: 4rem;
        height: 4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 0 20px rgba(96, 165, 250, 0.4);
        backdrop-filter: blur(5px);
    }

    #joystick-btn:hover {
        background: rgba(55, 65, 81, 0.9);
        transform: translateX(-50%) scale(1.15) rotate(10deg);
        box-shadow: 0 0 30px rgba(96, 165, 250, 0.8);
        border-color: #93C5FD;
        color: #93C5FD;
    }

    #joystick-btn:active {
        transform: translateX(-50%) scale(0.95);
    }

    .joystick-icon {
        width: 2rem;
        height: 2rem;
        pointer-events: none;
    }

    /* Modal Styling */
    #game-modal {
        position: fixed;
        top: 4rem; /* Below Navbar */
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 90; /* Below Navbar (100) */
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s, visibility 0.3s;
    }

    #game-modal.embedded-view {
        position: static;
        opacity: 1;
        visibility: visible;
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding-bottom: 2rem;
    }

    #game-modal:not(.hidden):not(.embedded-view) {
        opacity: 1;
        visibility: visible;
    }

    .modal-overlay {
        position: absolute;
        inset: 0;
        background: rgba(3, 7, 18, 0.7); /* Deep dark blue/black */
        backdrop-filter: blur(8px);
    }

    .modal-content.glass-panel {
        position: relative;
        background: rgba(17, 24, 39, 0.85);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow:
            0 0 0 1px rgba(255, 255, 255, 0.05),
            0 20px 50px rgba(0, 0, 0, 0.7),
            0 0 100px rgba(96, 165, 250, 0.1); /* Subtle blue glow */
        backdrop-filter: blur(16px);
        border-radius: 1.5rem;
        padding: 2rem;
        width: 95%;
        max-width: 500px;
        color: #F3F4F6;
        display: flex;
        flex-direction: column;
        max-height: 90vh;
        overflow-y: auto;
        transform: scale(0.95);
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    /* Expand for Game View (Horizontal Layout) */
    #game-modal:not(.hidden) .modal-content:has(#game-area:not(.hidden)) {
        max-width: 800px;
    }

    #game-modal:not(.hidden) .modal-content {
        transform: scale(1);
    }

    .modal-header {
        display: grid;
        grid-template-columns: 2.5rem 1fr 2.5rem 2.5rem;
        gap: 0.5rem;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    #modal-title {
        font-size: 1.8rem;
        font-weight: 800;
        background: linear-gradient(135deg, #60A5FA 0%, #A78BFA 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
        letter-spacing: -0.02em;
        text-align: center;
    }

    /* Fix for Title Display Error: preserve space when hidden */
    #header-back-btn.hidden {
        display: block !important;
        visibility: hidden;
    }

    #header-back-btn, #close-modal-btn, #suggest-game-btn {
        background: rgba(255, 255, 255, 0.05);
        border: none;
        color: #9CA3AF;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }

    #header-back-btn:hover, #close-modal-btn:hover, #suggest-game-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    #suggest-game-btn {
        font-size: 1.2rem;
    }

    #close-modal-btn:hover {
        transform: rotate(90deg);
    }

    /* Menu Buttons */
    #game-menu {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        width: 100%;
    }

    .game-select-btn {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 1.5rem 1rem;
        border-radius: 1rem;
        color: #E5E7EB;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: center;
        aspect-ratio: 1;
    }

    .game-select-btn:hover {
        background: rgba(96, 165, 250, 0.1);
        border-color: rgba(96, 165, 250, 0.3);
        transform: translateY(-5px);
        box-shadow: 0 10px 20px -5px rgba(0,0,0,0.3);
    }

    .game-icon {
        width: 3rem;
        height: 3rem;
        color: #60A5FA;
        margin-bottom: 0.25rem;
    }

    .game-icon svg {
        width: 100%;
        height: 100%;
        filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    }

    #leaderboard-btn {
        grid-column: span 2;
        aspect-ratio: auto;
        flex-direction: row;
        padding: 1rem;
        margin-top: 0.5rem;
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(217, 119, 6, 0.1) 100%);
        border-color: rgba(245, 158, 11, 0.2);
        color: #FCD34D;
    }

    #leaderboard-btn .game-icon {
        width: 1.5rem;
        height: 1.5rem;
        margin-bottom: 0;
        color: #FCD34D;
    }

    #leaderboard-btn:hover {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.2) 100%);
        border-color: rgba(245, 158, 11, 0.5);
        transform: translateY(-2px);
    }

    /* Canvas Area */
    .game-canvas-wrapper {
        position: relative;
        width: 100%;
        aspect-ratio: 1;
        background: #000; /* Deep black for contrast */
        border: 2px solid rgba(55, 65, 81, 0.5);
        border-radius: 1rem;
        overflow: hidden;
        margin-bottom: 1.5rem;
        box-shadow: inset 0 0 30px rgba(0,0,0,0.8);
    }

    canvas {
        width: 100%;
        height: 100%;
        display: block;
        image-rendering: pixelated; /* Sharp rendering */
    }

    /* Cutscene Overlay */
    #cutscene-overlay {
        position: absolute;
        inset: 0;
        background: rgba(220, 38, 38, 0.2);
        backdrop-filter: blur(2px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 30;
        animation: flashRed 1s infinite alternate;
    }

    .cutscene-content {
        background: #000;
        border: 2px solid #EF4444;
        padding: 2rem;
        text-align: center;
        color: #EF4444;
        box-shadow: 0 0 50px rgba(239, 68, 68, 0.5);
        transform: rotate(-2deg);
    }

    .glitch-text {
        font-size: 3rem;
        font-weight: 900;
        text-transform: uppercase;
        position: relative;
        animation: glitch 1s infinite;
    }

    .cutscene-msg {
        font-size: 1.2rem;
        font-weight: bold;
        margin: 1rem 0;
    }

    .cutscene-sub {
        font-size: 0.9rem;
        color: #FECACA;
        animation: blink 0.5s infinite;
    }

    @keyframes flashRed {
        from { background: rgba(220, 38, 38, 0.1); }
        to { background: rgba(220, 38, 38, 0.3); }
    }

    @keyframes blink {
        50% { opacity: 0; }
    }

    /* Game Overlay */
    #game-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(4px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        z-index: 20;
        animation: fadeIn 0.3s;
    }

    #game-overlay-title {
        font-size: 2.5rem;
        color: #F87171;
        margin: 0;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-shadow: 0 0 20px rgba(248, 113, 113, 0.5);
    }

    #game-overlay button {
        padding: 1rem 2rem;
        border-radius: 0.75rem;
        border: none;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        width: 80%;
        transition: transform 0.1s, filter 0.2s;
        text-transform: uppercase;
    }

    #game-restart-btn {
        background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
    }

    #game-quit-btn {
        background: rgba(255, 255, 255, 0.1);
        color: #D1D5DB;
    }

    #game-overlay button:hover {
        transform: translateY(-2px);
        filter: brightness(1.1);
    }

    /* Horizontal Game Layout */
    .game-layout-wrapper {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    @media (min-width: 768px) {
        .game-layout-wrapper {
            flex-direction: row;
            align-items: flex-start;
        }

        .game-left-col {
            flex: 2;
            min-width: 0; /* Prevent overflow */
        }

        .game-controls-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            min-width: 200px;
            text-align: left;
            padding-top: 0;
        }
    }

    /* Info Panel Styling */
    .score-card, .info-card {
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        padding: 1rem;
    }

    .score-label {
        font-size: 0.8rem;
        color: #9CA3AF;
        font-weight: 700;
        margin-bottom: 0.25rem;
        letter-spacing: 0.05em;
    }

    .score-display {
        font-size: 2.5rem;
        font-weight: 900;
        color: #60A5FA;
        font-family: 'Courier New', monospace;
        text-shadow: 0 0 10px rgba(96, 165, 250, 0.5);
        line-height: 1;
    }

    #controls-hint {
        color: #D1D5DB;
        font-size: 0.9rem;
        font-style: italic;
        margin: 0;
        line-height: 1.4;
    }

    .side-btn {
        background: rgba(255, 255, 255, 0.05);
        color: #F87171;
        border: 1px solid rgba(248, 113, 113, 0.2);
        padding: 0.75rem;
        border-radius: 0.75rem;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.2s;
        display: none;
    }

    @media (min-width: 768px) {
        .side-btn {
            display: block;
        }
    }

    .side-btn:hover {
        background: rgba(248, 113, 113, 0.1);
        border-color: rgba(248, 113, 113, 0.5);
    }

    /* Leaderboard */
    .leaderboard-game-section {
        background: rgba(0,0,0,0.2);
        border-radius: 0.75rem;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .leaderboard-game-title {
        font-weight: 700;
        color: #60A5FA;
        font-size: 0.85rem;
        text-transform: uppercase;
        margin-bottom: 0.75rem;
        letter-spacing: 0.05em;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        padding-bottom: 0.5rem;
    }

    .leaderboard-list li {
        display: flex;
        justify-content: space-between;
        padding: 0.4rem 0;
        color: #D1D5DB;
        font-size: 0.9rem;
        border-bottom: 1px dashed rgba(255,255,255,0.1);
    }
    .leaderboard-list li:last-child { border-bottom: none; }

    /* Utility */
    .hidden { display: none !important; }
    .fade-in { animation: fadeIn 0.3s ease-out; }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<script>
    import { SoundManager, MusicManager, ScoreManager, GameLogic } from '../scripts/GameEngine.js';
    import { AdventureEngine } from '../scripts/AdventureEngine.js';

    // Initialize Managers
    const sound = new SoundManager();
    const music = new MusicManager();
    const scores = new ScoreManager();
    const adventure = new AdventureEngine();

    // Elements
    let modal, joystickBtn;
    let canvas, ctx;
    let adventureContainer, canvasContainer;
    let gameLoopId;
    let state = null;
    let currentGame = null;
    let lastTime = 0;
    let isPaused = false;
    let keys = {};

    function init() {
        joystickBtn = document.getElementById('joystick-btn');
        modal = document.getElementById('game-modal');
        canvas = document.getElementById('game-canvas');
        adventureContainer = document.getElementById('adventure-container');
        canvasContainer = document.getElementById('canvas-container');
        if (canvas) ctx = canvas.getContext('2d');

        if (joystickBtn) {
            joystickBtn.addEventListener('click', () => {
                modal.classList.remove('hidden');
                showMenu();
            });
        }

        const closeBtn = document.getElementById('close-modal-btn');
        if (closeBtn) {
            closeBtn.addEventListener('click', () => {
                // Fully quit the game
                stopGame(true);
                if (!modal.classList.contains('embedded-view')) {
                    modal.classList.add('hidden');
                } else {
                    // For embedded, maybe redirect to home or just show menu
                    showMenu();
                    window.location.href = '/';
                }
            });
        }

        const suggestBtn = document.getElementById('suggest-game-btn');
        if (suggestBtn) {
            suggestBtn.addEventListener('click', () => {
                window.dispatchEvent(new CustomEvent('open-game-suggestion'));
            });
        }

        document.querySelectorAll('.game-select-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                if (btn.id === 'leaderboard-btn') {
                    showLeaderboard();
                } else {
                    startGame(btn.dataset.game);
                }
            });
        });

        document.getElementById('game-restart-btn')?.addEventListener('click', () => {
            document.getElementById('game-overlay').classList.add('hidden');
            // currentGame is still set, so we can just restart
            startGame(currentGame);
        });

        document.getElementById('game-quit-btn')?.addEventListener('click', () => {
            stopGame(true);
            showMenu();
        });

        document.getElementById('side-quit-btn')?.addEventListener('click', () => {
            stopGame(true);
            showMenu();
        });

        document.getElementById('header-back-btn')?.addEventListener('click', () => {
            stopGame(true);
            showMenu();
        });

        const poolModeBtn = document.getElementById('pool-mode-btn');
        if (poolModeBtn) {
            poolModeBtn.addEventListener('click', () => {
                if (currentGame === 'pool' && state) {
                    const targetMode = !state.vsAI;
                    // Reset game on mode switch
                    startGame('pool');
                    // Restore/Set mode on new state
                    if (state) state.vsAI = targetMode;
                    poolModeBtn.textContent = state.vsAI ? "Switch to Solo" : "Switch to VS AI";
                }
            });
        }

        // Input Handling
        window.addEventListener('keydown', (e) => {
            keys[e.key] = true;
            if (e.key.toLowerCase() === 'p' && currentGame && currentGame !== 'tictactoe' && currentGame !== 'pool') {
                isPaused = !isPaused;
            }
            // Prevent scrolling
            if (['ArrowUp','ArrowDown','ArrowLeft','ArrowRight',' '].includes(e.key) && !modal.classList.contains('hidden')) {
                e.preventDefault();
            }

            // Direct Input Handling
            if (currentGame && GameLogic[currentGame] && GameLogic[currentGame].onKeyDown) {
                 // Pass full context for modification
                 state = GameLogic[currentGame].onKeyDown(e, state, {
                    playSound: (t) => sound.play(t)
                 });
            }
        });

        window.addEventListener('keyup', (e) => keys[e.key] = false);

        if (canvas) {
            canvas.addEventListener('mousedown', (e) => {
                if (currentGame === 'tictactoe' && state) {
                    state = GameLogic.tictactoe.handleClick(e, state, canvas, {
                        playSound: (t) => sound.play(t),
                        onScore: updateScore,
                        onGameOver: handleGameOver,
                        onCutscene: triggerCutscene
                    });
                    GameLogic.tictactoe.draw(ctx, state, canvas);
                } else if (currentGame === 'pool' && state) {
                     state = GameLogic.pool.handleMouseDown(e, state, canvas);
                } else if (currentGame === 'idle' && state) {
                     state = GameLogic.idle.handleClick(e, state, canvas, {
                        playSound: (t) => sound.play(t),
                        onScore: updateScore,
                        onGameOver: handleGameOver
                     });
                }
            });

            canvas.addEventListener('mousemove', (e) => {
                if (currentGame === 'pool' && state) {
                    state = GameLogic.pool.handleMouseMove(e, state, canvas);
                }
            });

            canvas.addEventListener('mouseup', (e) => {
                if (currentGame === 'pool' && state) {
                    state = GameLogic.pool.handleMouseUp(e, state, canvas, {
                        playSound: (t) => sound.play(t),
                        onScore: updateScore,
                        onGameOver: handleGameOver
                    });
                }
            });
        }
    }

    function renderAdventure() {
        const node = adventure.getCurrentNode();
        const textEl = document.getElementById('adventure-text');
        const choicesEl = document.getElementById('adventure-choices');

        textEl.textContent = node.text;
        choicesEl.innerHTML = '';

        node.choices.forEach((c, i) => {
            // Check reqs
            if (c.req && !adventure.state.inventory.includes(c.req)) return;

            const btn = document.createElement('button');
            btn.textContent = c.text;
            btn.className = 'adventure-btn';
            btn.style.padding = '0.5rem';
            btn.style.background = '#1F2937';
            btn.style.color = '#E5E7EB';
            btn.style.border = '1px solid #374151';
            btn.style.borderRadius = '0.5rem';
            btn.style.cursor = 'pointer';
            btn.style.textAlign = 'left';

            btn.onmouseover = () => btn.style.background = '#374151';
            btn.onmouseout = () => btn.style.background = '#1F2937';

            btn.onclick = () => {
                const newNode = adventure.handleChoice(i, {
                    onLoot: (item) => sound.play('score'),
                    onAchievement: (id) => {
                        if(window.AchievementManager) window.AchievementManager.unlock(id);
                        sound.play('score');
                    }
                });
                if (newNode) renderAdventure();
            };
            choicesEl.appendChild(btn);
        });
    }

    function showMenu() {
        document.getElementById('game-menu').classList.remove('hidden');
        document.getElementById('game-area').classList.add('hidden');
        document.getElementById('leaderboard-view').classList.add('hidden');
        document.getElementById('header-back-btn').classList.add('hidden'); // Hide back button on menu
        document.getElementById('suggest-game-btn').classList.remove('hidden'); // Show suggest button
        document.getElementById('modal-title').textContent = "AI Arcade";
    }

    function showLeaderboard() {
        document.getElementById('game-menu').classList.add('hidden');
        document.getElementById('leaderboard-view').classList.remove('hidden');
        document.getElementById('header-back-btn').classList.remove('hidden'); // Show back button
        document.getElementById('suggest-game-btn').classList.add('hidden'); // Hide suggest on leaderboard
        document.getElementById('modal-title').textContent = "High Scores";

        const data = scores.getScores();
        const fmtDate = (d) => new Date(d).toLocaleDateString(undefined, { month: 'short', day: 'numeric' });
        const listHtml = (items) => items.map(s => `<li><span>${fmtDate(s.date)}</span><span>${s.score}</span></li>`).join('');

        const content = document.getElementById('leaderboard-content');
        content.innerHTML = `
             <div class="leaderboard-game-section">
                <div class="leaderboard-game-title">Neural Pool</div>
                <ul class="leaderboard-list">${listHtml(data.pool || [])}</ul>
            </div>
            <div class="leaderboard-game-section">
                <div class="leaderboard-game-title">Cluster Builder</div>
                <ul class="leaderboard-list">${listHtml(data.tetris)}</ul>
            </div>
            <div class="leaderboard-game-section">
                <div class="leaderboard-game-title">Data Stream</div>
                <ul class="leaderboard-list">${listHtml(data.snake)}</ul>
            </div>
            <div class="leaderboard-game-section">
                <div class="leaderboard-game-title">Firewall Breaker</div>
                <ul class="leaderboard-list">${listHtml(data.breakout)}</ul>
            </div>
             <div class="leaderboard-game-section">
                <div class="leaderboard-game-title">Neural Nodes (Streak)</div>
                <ul class="leaderboard-list"><li><span>Best Streak</span><span>${data.tictactoe || 0}</span></li></ul>
            </div>
        `;
    }

    function startGame(game) {
        currentGame = game;
        document.getElementById('game-menu').classList.add('hidden');
        document.getElementById('game-area').classList.remove('hidden');
        document.getElementById('game-overlay').classList.add('hidden');
        document.getElementById('header-back-btn').classList.remove('hidden'); // Show back button
        document.getElementById('suggest-game-btn').classList.add('hidden'); // Hide suggest button in game

        // Pool controls
        const poolControls = document.getElementById('pool-controls');
        if (game === 'pool') {
            poolControls.classList.remove('hidden');
        } else {
            poolControls.classList.add('hidden');
        }

        // Handle Adventure vs Canvas
        if (game === 'adventure') {
            adventureContainer.classList.remove('hidden');
            canvasContainer.classList.add('hidden');
            renderAdventure();
        } else {
            adventureContainer.classList.add('hidden');
            canvasContainer.classList.remove('hidden');
        }

        // Titles & Hints
        const titles = {
            snake: "Data Stream",
            tetris: "Cluster Builder",
            breakout: "Firewall Breaker",
            tictactoe: "Neural Nodes",
            pool: "Neural Pool",
            adventure: "The Unpoppable"
        };
        const hints = {
            snake: "Arrows to Move ‚Ä¢ P to Pause",
            tetris: "Arrows to Move/Rotate ‚Ä¢ P to Pause",
            breakout: "Left/Right to Deflect ‚Ä¢ P to Pause",
            tictactoe: "Click empty nodes to capture",
            pool: "Drag/Hold to aim & shoot ‚Ä¢ Click button to switch mode",
            adventure: "Read text ‚Ä¢ Click choices to progress"
        };
        document.getElementById('modal-title').textContent = titles[game] || "Game";
        document.getElementById('controls-hint').textContent = hints[game] || "";
        document.getElementById('current-score').textContent = "0";

        // Reset
        canvas.width = 400; canvas.height = 400;
        keys = {};
        isPaused = false;
        document.getElementById('cutscene-overlay').classList.add('hidden');

        if (GameLogic[game]) {
            state = GameLogic[game].init(canvas);

            // Sync button state for pool
            if (game === 'pool') {
                const btn = document.getElementById('pool-mode-btn');
                if (btn) btn.textContent = state.vsAI ? "Switch to Solo" : "Switch to VS AI";
            }

            // Start Music
            if (game === 'tetris') music.playTrack('tetris');
            if (game === 'breakout') music.playTrack('breakout');

            lastTime = performance.now();
            if (gameLoopId) cancelAnimationFrame(gameLoopId);
            loop(lastTime);
        }
    }

    function stopGame(fullQuit = false) {
        if (gameLoopId) cancelAnimationFrame(gameLoopId);
        music.stop();
        if (fullQuit) {
            currentGame = null;
        }
    }

    function updateScore(s) {
        document.getElementById('current-score').textContent = s;

        // Check Achievements
        if (window.AchievementManager) {
            if (currentGame === 'snake') {
                if (s >= 500) window.AchievementManager.unlock('snake_charmer');
                if (s >= 1000) window.AchievementManager.unlock('snake_survivor');
            }
            if (currentGame === 'tetris') {
                if (s >= 1000) window.AchievementManager.unlock('tetris_master');
                if (s >= 3000) window.AchievementManager.unlock('tetris_endurance');
            }
            if (currentGame === 'breakout') {
                if (s >= 500) window.AchievementManager.unlock('breakout_artist');
                if (s >= 2000) window.AchievementManager.unlock('breakout_clean');
            }
        }
    }

    function handleGameOver(finalScore) {
        stopGame(); // Stop the loop, but keep currentGame for restart
        sound.play('gameover');
        scores.saveScore(currentGame, finalScore);

        // Check Achievements
        if (window.AchievementManager) {
            if (currentGame === 'snake') {
                if (finalScore >= 500) window.AchievementManager.unlock('snake_charmer');
                if (finalScore >= 1000) window.AchievementManager.unlock('snake_survivor');
            }
            if (currentGame === 'tetris') {
                if (finalScore >= 1000) window.AchievementManager.unlock('tetris_master');
                if (finalScore >= 3000) window.AchievementManager.unlock('tetris_endurance');
            }
            if (currentGame === 'breakout') {
                if (finalScore >= 500) window.AchievementManager.unlock('breakout_artist');
                if (finalScore >= 2000) window.AchievementManager.unlock('breakout_clean');
            }
            if (currentGame === 'pool' && finalScore > 0) window.AchievementManager.unlock('pool_shark');
            if (currentGame === 'tictactoe' && finalScore >= 10) window.AchievementManager.unlock('ttt_draw_master');
        }

        document.getElementById('game-overlay-score').textContent = `Score: ${finalScore}`;
        document.getElementById('game-overlay').classList.remove('hidden');
    }

    function triggerCutscene() {
        sound.play('gameover'); // Deep sound
        const overlay = document.getElementById('cutscene-overlay');
        overlay.classList.remove('hidden');
        setTimeout(() => {
            overlay.classList.add('hidden');
        }, 4000);
    }

    function loop(time) {
        if (!currentGame) return;
        gameLoopId = requestAnimationFrame(loop);

        if (isPaused) {
            lastTime = time;
            // Draw Pause
            ctx.fillStyle = 'rgba(0,0,0,0.5)';
            ctx.fillRect(0,0,canvas.width, canvas.height);
            ctx.fillStyle = '#F59E0B';
            ctx.font = 'bold 30px Courier New';
            ctx.textAlign = 'center';
            ctx.fillText("PAUSED", canvas.width/2, canvas.height/2);
            return;
        }

        let dt = time - lastTime;
        // Cap dt to prevent "spiral of death" or huge jumps after tab switching
        if (dt > 100) dt = 16.67;
        lastTime = time;

        ctx.clearRect(0,0,canvas.width, canvas.height);

        // Update & Draw
        if (currentGame !== 'tictactoe') { // TTT is event based
            state = GameLogic[currentGame].update(dt, state, canvas, {
                playSound: (t) => sound.play(t),
                onScore: updateScore,
                onGameOver: handleGameOver
            }, { keys });

            // Check if game over happened inside update
            if (currentGame) GameLogic[currentGame].draw(ctx, state, canvas);
        } else {
             GameLogic.tictactoe.draw(ctx, state, canvas);
        }
    }

    // Init on load
    document.addEventListener('DOMContentLoaded', init);

</script>
