    .achievement-icon {
        font-size: 2rem;
        background: rgba(16, 185, 129, 0.2);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .achievement-info {
        display: flex;
        flex-direction: column;
    }

    .achievement-title {
        font-size: 0.75rem;
        color: #10B981;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 700;
    }

    .achievement-name {
        font-size: 1.1rem;
        font-weight: 600;
    }

    /* Bubbles Background */
    .background-bubbles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        overflow: hidden;
        pointer-events: none;
    }

    .bubble {
        position: absolute;
        /* Positioning handled by JS transform */
        /* top: 0; Removed to prevent initial flash at top-left */
        left: 0;
        background-color: var(--bubble-color, rgba(255, 255, 255, 0.1));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: crosshair;
        pointer-events: auto; /* Enable clicks */
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(2px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        will-change: transform; /* Optimize for movement */
    }

    .bubble svg {
        width: 60%;
        height: 60%;
        opacity: 0.8;
    }

    /* Removed pop animation styles */

    /* Spike Walls */
    .spike-wall {
        position: fixed;
        top: 0;
        bottom: 0;
        width: 40px;
        z-index: 5;
        pointer-events: none;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        overflow: hidden;
    }

    .spike-wall.left { left: 0; }
    .spike-wall.right { right: 0; }

    .spike {
        width: 0;
        height: 0;
        border-top: 15px solid transparent;
        border-bottom: 15px solid transparent;
        margin-bottom: 5px;
    }

    .spike-wall.left .spike {
        border-left: 30px solid rgba(139, 92, 246, 0.6); /* Purple/Neon tint */
