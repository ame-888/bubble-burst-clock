---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700;900&display=swap" rel="stylesheet">
		<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5230972214569734"
     crossorigin="anonymous"></script>
        <slot name="head" />
	</head>
	<body>
        <!-- Spikes -->
        <div class="spike-wall left">
            {Array.from({ length: 20 }).map(() => <div class="spike" />)}
        </div>
        <div class="spike-wall right">
            {Array.from({ length: 20 }).map(() => <div class="spike" />)}
        </div>

        <div id="bubbles-container" class="background-bubbles">
            {bubblesConfig.map((b, i) => (
                <div
                    class="bubble"
                    data-index={i}
                    data-size={b.size}
                    data-x={b.x}
                    data-speed={b.speed}
                    style={{
                        '--bubble-color': b.color,
                        width: `${b.size}px`,
                        height: `${b.size}px`,
                        // Initial positioning handled by JS for smoothness
                        top: '0px',
                        left: '0px'
                    }}
                    set:html={b.logo}
                />
            ))}
        </div>

        <Navbar lang={lang} />

		<div class="content-wrapper">
            <slot />
        </div>

        <!-- Achievement Toast Container -->
        <div id="achievement-toast-container"></div>

        <script>
            // Initialize Achievement Manager
            import { achievementManager } from '../scripts/AchievementManager';

            document.addEventListener('DOMContentLoaded', () => {
                const container = document.getElementById('bubbles-container');
                const bubbleEls = document.querySelectorAll('.bubble');

                // Shared Audio Context
                let audioCtx = null;

                // Mouse position
                let mouseX = -1000;
                let mouseY = -1000;

                document.addEventListener('mousemove', (e) => {
                    mouseX = e.clientX;
                    mouseY = e.clientY;
                });

                // Initialize bubbles
                const bubbles = Array.from(bubbleEls).map(el => {
                    const size = parseFloat(el.getAttribute('data-size'));
                    const startXPercent = parseFloat(el.getAttribute('data-x'));
                    const speed = parseFloat(el.getAttribute('data-speed'));

                    // Randomize vertical start positions to distribute them across the screen initially
                    const startY = Math.random() * window.innerHeight;

                    // Add click handler to pop bubble
                    el.addEventListener('click', (e) => {
                        e.stopPropagation();
                        popBubble(el, bInstance);
                    });

                    const bInstance = {
                        el,
                        size,
                        x: (startXPercent / 100) * window.innerWidth, // Actual pixels
                        y: startY,
                        speed: speed * 0.5, // Base rising speed
                        vx: 0,
                        vy: 0,
                        baseX: (startXPercent / 100) * window.innerWidth,
                        popped: false
                    };
                    return bInstance;
                });

                function popBubble(el, bubble) {
                    if (bubble.popped) return;
                    bubble.popped = true;

                    // Sound Effect (Synthesized Pop)
                    try {
                        const AudioContext = window.AudioContext || window.webkitAudioContext;
                        if (AudioContext) {
                            if (!audioCtx) audioCtx = new AudioContext();
                            if (audioCtx.state === 'suspended') audioCtx.resume();

                            const osc = audioCtx.createOscillator();
                            const gain = audioCtx.createGain();

                            osc.type = 'sine';
                            osc.frequency.setValueAtTime(400, audioCtx.currentTime);
                            osc.frequency.exponentialRampToValueAtTime(50, audioCtx.currentTime + 0.1);

                            gain.gain.setValueAtTime(0.3, audioCtx.currentTime);
                            gain.gain.exponentialRampToValueAtTime(0.01, audioCtx.currentTime + 0.1);

                            osc.connect(gain);
                            gain.connect(audioCtx.destination);
                            osc.start();
                            osc.stop(audioCtx.currentTime + 0.1);
                        }
                    } catch (e) { console.warn('Audio play failed', e); }

                    // Visual Pop Animation
                    el.style.transition = 'transform 0.15s ease-out, opacity 0.15s ease-out';
                    el.style.transform = `translate3d(${bubble.x}px, ${bubble.y}px, 0) scale(1.4)`;
                    el.style.opacity = '0';

                    // Track Pop Count
                    let pops = 0;
                    try {
                        pops = parseInt(localStorage.getItem('bubbles_popped') || '0') + 1;
                        localStorage.setItem('bubbles_popped', pops);

                        // Unlock Achievement (Check every pop)
                         // Import handled at module level but we can access global if attached or dispatch event
                         // We'll rely on global manager if available
                        if (window.AchievementManager) {
                            if (pops >= 10) window.AchievementManager.unlock('bubble_popper');
                        }
                    } catch (e) {}

                    // Reset Bubble after animation
                    setTimeout(() => {
                        const height = window.innerHeight;
                        const width = window.innerWidth;
                        bubble.y = height + 50;
                        bubble.baseX = Math.random() * width;
                        bubble.x = bubble.baseX;
                        bubble.vx = 0;
                        bubble.vy = 0;
                        bubble.popped = false;

                        // Reset Styles
                        el.style.transition = '';
                        el.style.opacity = '1';
                        // Position will be updated by loop
                    }, 200);
                }

                function playSpikeSound() {
                     try {
                        const AudioContext = window.AudioContext || window.webkitAudioContext;
                        if (AudioContext) {
                            if (!audioCtx) audioCtx = new AudioContext();
                            if (audioCtx.state === 'suspended') audioCtx.resume();

                            const osc = audioCtx.createOscillator();
                            const gain = audioCtx.createGain();

                            osc.type = 'sawtooth'; // Sharp sound
                            osc.frequency.setValueAtTime(800, audioCtx.currentTime); // Higher pitch
                            osc.frequency.exponentialRampToValueAtTime(100, audioCtx.currentTime + 0.1); // Quick drop

                            gain.gain.setValueAtTime(0.1, audioCtx.currentTime);
                            gain.gain.exponentialRampToValueAtTime(0.001, audioCtx.currentTime + 0.1);

                            osc.connect(gain);
                            gain.connect(audioCtx.destination);
                            osc.start();
                            osc.stop(audioCtx.currentTime + 0.1);
                        }
                    } catch (e) { console.warn('Audio play failed', e); }
                }

                function update() {
                    const width = window.innerWidth;
                    const height = window.innerHeight;

                    const repulsionRadius = 150;
                    const repulsionStrength = 2.0;

                    // Spike Logic
                    const spikeWidth = 40; // Approx visual width
                    const safeMargin = 80; // Distance to start "natural" repulsion
                    const wallForce = 0.5; // Natural containment force

                    bubbles.forEach(b => {
                        if (b.popped) return; // Skip logic if currently popping

                        // Rising
                        b.y -= b.speed;

                        // Reset if off top
                        // We use b.size + buffer to ensure it is fully off screen
                        if (b.y < -b.size - 50) {
                            b.y = height + 50;
                            // Randomize x slightly on reset but keep within safe zone
                            b.baseX = spikeWidth + Math.random() * (width - 2 * spikeWidth - b.size);
                            b.x = b.baseX;
                            b.vx = 0;
                            b.vy = 0;
                        }

                        // Mouse Repulsion
                        const cx = b.x + b.size / 2;
                        const cy = b.y + b.size / 2;
                        const dx = cx - mouseX;
                        const dy = cy - mouseY;
                        const dist = Math.sqrt(dx * dx + dy * dy);

                        if (dist < repulsionRadius) {
                            const force = (repulsionRadius - dist) / repulsionRadius;
                            const angle = Math.atan2(dy, dx);

                            // Apply force to velocity
                            b.vx += Math.cos(angle) * force * repulsionStrength;
                            b.vy += Math.sin(angle) * force * repulsionStrength;
                        }

                        // Wall Repulsion (Natural Containment)
                        // If near wall and moving towards it, apply corrective force
                        if (b.x < safeMargin) {
                             b.vx += wallForce * (1 - (b.x / safeMargin));
                        } else if (b.x > width - safeMargin - b.size) {
                             const distToWall = (width - b.x - b.size);
                             b.vx -= wallForce * (1 - (distToWall / safeMargin));
                        }

                        // Apply velocity (permanent displacement + damping)
                        b.x += b.vx;
                        b.y += b.vy;

                        // Damping (friction)
                        b.vx *= 0.95;
                        b.vy *= 0.95;

                        // Spike Collision & Pop
                        if (b.x <= spikeWidth || b.x >= width - spikeWidth - b.size) {
                            playSpikeSound();
                            popBubble(b.el, b);
                            return;
                        }

                        // Fallback constraint (if managed to get past spike without popping - unlikely but safe)
                        // Or if we want them to pop, we just let them pop.
                        // But let's prevent horizontal wrapping now since we have walls.
                        // We do strictly clamp for rendering to avoid scrollbars if something glitches
                        if (b.x < -b.size) b.x = -b.size;
                        if (b.x > width) b.x = width;

                        // Render
                        b.el.style.transform = `translate3d(${b.x}px, ${b.y}px, 0)`;
                    });

                    requestAnimationFrame(update);
                }

                requestAnimationFrame(update);
            });
        </script>
	</body>
</html>

<style is:global>
    :root {
        --font-body: 'Inter', sans-serif;
        --font-heading: 'Poppins', sans-serif;
        --color-bg: #111827;
        --color-text: #F3F4F6;
