	html,
	body {
		margin: 0;
		width: 100%;
        min-height: 100vh;
        background-color: var(--color-bg);
        color: var(--color-text);
        font-family: var(--font-body);
        overflow-x: hidden;
	}

    h1, h2, h3, h4, h5, h6 {
